programa {
  funcao inicio() {
    // Declaração de Variáveis
    inteiro numero, positivo, negativo, zero

    //  Entrada de Dados
    escreva("Digite um número: ")
    leia(numero)

    // Processamento
    se(numero >= 1 ){
      escreva("o número " , numero , " é positivo")
    }
    se(numero <= -1){
      escreva("o número " ,numero ,  " é negativo")
    }
    se(numero == 0){
      escreva("o número " , numero , " é zero")
    }
    // Saída de Dados


    
  }
}
